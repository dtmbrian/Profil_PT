<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/t_tm"
            android:layout_toRightOf="@+id/t_pp"
            android:gravity="center"
            android:background="@drawable/my_drawable"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/t_pp"
            android:layout_toRightOf="@+id/t_bk"
            android:gravity="center"
            android:background="@drawable/my_drawable"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/t_bk"
            android:layout_toRightOf="@+id/t_jbtn"
            android:gravity="center"
            android:background="@drawable/my_drawable"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/t_jbtn"
            android:layout_toRightOf="@+id/t_nama"
            android:gravity="center"
            android:background="@drawable/my_drawable"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/t_nama"
            android:layout_toRightOf="@+id/t_no"
            android:gravity="center"
            android:background="@drawable/my_drawable"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:id="@+id/t_no"
            android:text=""
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@drawable/my_drawable"/>
    </RelativeLayout>


</RelativeLayout>